@model RFIDAttendance.Models.Student

@{
    ViewData["Title"] = "Create";
}

<h1>Add Student</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StudentID" class="control-label"></label>
                <input asp-for="StudentID" class="form-control" />
                <span asp-validation-for="StudentID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Period" class="control-label"></label>
                <select asp-for="Period" class="form-control">
                    <option disabled selected>Select Period</option>
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                    <option>6</option>
                </select>
                <span asp-validation-for="Period" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="InClass" /> @Html.DisplayNameFor(model => model.InClass)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="TimeLastCheckedIn" class="control-label"></label>
                <input asp-for="TimeLastCheckedIn" class="form-control" />
                <span asp-validation-for="TimeLastCheckedIn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimeLastCheckedOut" class="control-label"></label>
                <input asp-for="TimeLastCheckedOut" class="form-control" />
                <span asp-validation-for="TimeLastCheckedOut" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AttendaceStatus" class="control-label"></label>
                <select asp-for="AttendaceStatus" class="form-control">
                    <option disabled selected>Select Status</option>
                    <option>PRESENT</option>
                    <option>TARDY</option>
                    <option>ABSENT</option>
                </select>
                <span asp-validation-for="AttendaceStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
